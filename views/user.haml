#content    
  %body
    %h1
    == There are #{@users.length} users in your database
    %form{:action => "/user", :method => "post"}
      %hr
      %a{:href => "/signup"}Add Account
      %hr
      %table{:border => 1}
        %tr
          %td
            %strong ID
          %td
            %strong Username
          %td
            %strong Email address
          %td
            %strong First Name
          %td
            %strong Last Name
          %td
            %strong Admin Status
          %td
            %strong Manage
          %td
            %strong Delete  
        -@users.each do |user|
          %tr
            %td=user.id
            %td=user.username
            %td=user.email
            %td=user.first_name
            %td=user.last_name
            %td=user.admin.to_s
            %td
              %a{:href => "/update_user_#{user.id}"} Manage
            %td
              %input{:type => "submit", :name => "delete", :value => "Delete Account"}
              %input{:type => "hidden", :name => "id", :value => "#{user.id}"}
      
                
                          
      
            
            
    
    
            
